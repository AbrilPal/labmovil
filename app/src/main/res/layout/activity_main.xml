<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" tools:srcCompat="@tools:sample/avatars"
            android:layout_marginBottom="65dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="145dp" android:layout_marginStart="145dp" android:layout_marginTop="65dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="138dp" android:layout_marginRight="138dp"/>
    <TextView
            android:text="Restaurante la Bendición"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="24sp"
            android:textColor="@android:color/holo_purple"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="73dp" android:layout_marginStart="73dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="74dp" android:layout_marginRight="74dp" android:layout_marginTop="73dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <Button
            android:layout_width="87dp"
            android:layout_height="49dp"
            android:id="@+id/button" android:text="Menú"
            android:textColorLink="@color/colorAccent"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="163dp"
            android:layout_marginRight="163dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:text="Pedido"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp" android:layout_marginBottom="116dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>